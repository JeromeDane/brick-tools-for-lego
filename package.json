{
  "name": "brick-tools-for-lego",
  "version": "0.1.0",
  "homepage": "https://jeromedane.github.io/brick-tools-for-lego/",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "react-native run-android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint \"**/*.js\" \"**/*.ts\" \"**/*.tsx\"",
    "test": "jest --watchAll",
    "prebuild": "yarn update-data",
    "eas-build-pre-install": "export NODE_OPTIONS=--max_old_space_size=8192 && yarn install && yarn prebuild",
    "deploy": "yarn build:web && gh-pages -d web-build",
    "build:web": "expo build:web && cp web-build/index.html web-build/404.html",
    "build:playstore": "cd android && ./gradlew :app:bundleRelease",
    "build:apk": "cd android && ./gradlew :app:assembleRelease",
    "cli": "ts-node ./cli/cli.ts",
    "update-data": "ts-node ./cli/cli.ts --updateData",
    "release": "yarn update-data && cd app && yarn deploy"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^12.0.0",
    "@react-native-async-storage/async-storage": "^1.15.14",
    "@react-native-community/checkbox": "^0.5.9",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-native-picker/picker": "^2.2.1",
    "@react-navigation/bottom-tabs": "^6.0.5",
    "@react-navigation/drawer": "^6.1.8",
    "@react-navigation/material-top-tabs": "^6.0.6",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/native-stack": "^6.1.0",
    "expo": "~43.0.2",
    "expo-asset": "~8.4.3",
    "expo-constants": "~12.1.3",
    "expo-font": "~10.0.3",
    "expo-linking": "~2.4.2",
    "expo-splash-screen": "~0.13.5",
    "expo-status-bar": "~1.1.0",
    "expo-system-ui": "^1.1.0",
    "expo-updates": "~0.10.13",
    "expo-web-browser": "~10.0.3",
    "form-urlencoded": "^6.0.5",
    "intl": "^1.2.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native": "0.64.3",
    "react-native-gesture-handler": "^2.1.0",
    "react-native-loading-spinner-overlay": "^2.0.0",
    "react-native-pager-view": "5.4.6",
    "react-native-paper": "^4.11.2",
    "react-native-reanimated": "^2.3.1",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-screens": "^3.10.1",
    "react-native-tab-view": "^3.1.1",
    "react-native-vector-icons": "^9.0.0",
    "react-native-web": "0.17.1",
    "react-native-webview": "^11.15.0",
    "rn-fetch-blob": "^0.12.0",
    "sort-by-typescript": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/node": "^16.11.10",
    "@types/react": "~17.0.21",
    "@types/react-native": "~0.64.12",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "camelcase-keys": "^7.0.1",
    "cli-progress": "^3.10.0",
    "cross-fetch": "^3.1.4",
    "csvtojson": "^2.0.10",
    "eslint": "^8.5.0",
    "eslint-plugin-react": "^7.28.0",
    "form-urlencoded": "^6.0.5",
    "gh-pages": "^3.2.3",
    "gunzip-file": "^0.1.1",
    "jest-expo": "~43.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "yargs": "^17.2.1"
  },
  "private": true
}
